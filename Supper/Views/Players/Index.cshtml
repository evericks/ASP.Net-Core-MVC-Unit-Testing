@model dynamic

@{ ViewData["Title"] = "Index"; }

<div class="col-md-6">

    <div class="md-form active-cyan active-cyan-2 mb-3">
        <input class="form-control" id="search" type="text" placeholder="Search" aria-label="Search">
    </div>
</div>

<div>
    <h3 class="my-3 title">Famous</h3>
    <section class="dark-grey-text text-center">
        <div class="row">
            @foreach (var item in Model.Player)
            {
@if (item.Star >= 70)
{
<div class="player col-lg-3 col-md-6 mb-4 animated fadeIn">
    <div class="card collection-card z-depth-1-half">
        <div class="view zoom">
            <img src="~/img/player/@item.Image" class="img-fluid rounded"
                 alt="">
            <div class="mask flex-center hm-gradient">
            </div>
            <a asp-action="Details" asp-route-id="@item.Id">
                <div class="stripe rgba-black-light">
                    <p class="text-white my-auto">
                        @item.Name
                        <i class="fas fa-angle-right px-3"></i>
                    </p>
                </div>
            </a>
        </div>
    </div>
</div>          }}
        </div>
    </section>

    <h3 class="my-3 title">Available</h3>
    <section class="dark-grey-text text-center">
        <div class="row">
            @foreach (var item in Model.Player)
            {
@if (item.Star < 70)
{
<div class="player col-lg-3 col-md-6 mb-4 animated fadeIn">
    <div class="card collection-card z-depth-1-half">
        <div class="view zoom">
            <img src="~/img/player/@item.Image" class="img-fluid rounded"
                 alt="">
            <div class="mask flex-center hm-gradient">
            </div>
            <a asp-action="Details" asp-route-id="@item.Id">
                <div class="stripe rgba-black-light">
                    <p class="text-white my-auto">
                        @item.Name
                        <i class="fas fa-angle-right px-3"></i>
                    </p>
                </div>
            </a>
        </div>
    </div>
</div>          }}
        </div>
    </section>
</div>
